
<center>
<h1 style="font-size:50px;">Chitter</h1>
<h1 style="font-size:50px;">Peep Timeline</h1>


<h2>
  <%= flash[:notice] %>
</h2>

<h1>
  <ul style="list-style-type:none">
    <% @peeps.each do |peep| %>
      <div style="border-style: inset"><li class="peep"><div style="display:inline-block;"><b style="color:blue"><%= peep.name %></b><small style="color:gray">(<%= peep.username %>):</small></div> <p><%= peep.message %></p><div style="color:gray;font-size:20px"><%= peep.date_time %></div></li>
      <% if peep.tags? %>
      <li class="tag"><label>Tagged:</label>
      <a href="/tags/<%= peep.tags?.user_id %>"> <%= peep.tags?.username %></a>
      <% end %>
      <% if @user %>
        <div"><form action="/peeps/<%= peep.id %>/reply" method="get">
          <button class="reply" type="submit" value="Reply" style="text-align:center; width:200px; font-size:20px;">Reply</button>
        </form></div>
      <% end %>
      <% if peep.replies %>
      <li class="reply"><label>Replies:</label>
        <div style="display:inline-block;"><% peep.replies.each do |reply| %>
          <li class="reply"><b style="color:blue;font-size:30px"><%= reply.name %></b><small style="color:gray;font-size:20px">(<%= reply.username %>):</small> <p style="font-size:20px"><%= reply.message %></p><small style="color:gray;font-size:15px"><%= reply.date_time %></small></li></div>
        <% end %>
      <% end %>
    <% end %>
  </div></ul>
</h1>

<% if @user %>
<form action="/peeps/new">
  <button type="submit" value="Post Peep" style="text-align:center; width:300px; font-size:30px;">Post Peep</button>
</form>
<form action="/sessions/destroy" method="post">
  <button type="submit" value="Sign Out" style="text-align:center; width:300px; font-size:30px;">Sign Out</button>
</form>
<% end %>
</center>
